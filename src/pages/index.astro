---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/content/Hero.astro";
import Implementations from "../components/content/Implementations.astro";
import TodoMVC from "../components/content/TodoMVC.astro";
import Similarities from "../components/content/Similarities.astro";
import UseCases from "../components/content/UseCases.astro";
import { SITE_TITLE } from "../config";
import BigPicture from "../components/content/BigPicture.astro";
import Contribute from "../components/content/Contribute.astro";
import TechnologicalChallenges from "../components/content/TechnologicalChallenges.astro";
import Presentation from "../components/Presentation.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE}`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    <Implementations />
    <TodoMVC />
    <Similarities />
    <TechnologicalChallenges />
    <BigPicture />
    <UseCases />
    <Presentation />
    <Contribute />
  </Fragment>
</PageLayout>
