---
import PageMeta from "../components/PageMeta.astro";
import PageLayout from "../layouts/PageLayout.astro";
import Intro from "../components/Intro.astro";
import ImgText from "../components/ImgText.astro";
import Info from "../components/Info.astro";
import Listings from "../components/Listings.astro";
import UseCases from "../components/UseCases.astro";
import { SITE_TITLE } from "../config";
import BigPicture from "../components/content/BigPicture.astro";
---

<PageLayout>
  <PageMeta title={`${SITE_TITLE}`} slot="meta" />
  <Fragment slot="main">
    <Intro />
    <ImgText />
    <Info />
    <Listings />
    <BigPicture />
    <UseCases />
  </Fragment>
</PageLayout>
